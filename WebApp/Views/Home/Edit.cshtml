@model SAP_MIMOSAapp.Models.MappingDocument

@{
    ViewData["Title"] = "Edit Mapping";
}

<div class="container mt-4">
    <h2>Edit Mapping</h2>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <form asp-action="Edit" method="post">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Mapping Details</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="mapID" class="form-label">Map ID</label>
                        <input asp-for="mapID" class="form-control" readonly />
                        <span asp-validation-for="mapID" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LLMType" class="form-label">LLM Type</label>
                        <select asp-for="LLMType" class="form-select">
                            <option value="">Select LLM Type</option>
                            <option value="gpt-4.1">GPT-4.1</option>
                            <option value="o4-mini">GPT-o4-mini</option>
                        </select>
                        <span asp-validation-for="LLMType" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Mappings</h5>
                <button type="button" class="btn btn-sm btn-primary" id="addMapping">Add Mapping</button>
            </div>
            <div class="card-body" id="mappingsContainer">
                @if (Model.mappings == null || Model.mappings.Count == 0)
                {
                    <div class="alert alert-info" id="noMappingsMessage">
                        No mappings added yet. Click "Add Mapping" to create a mapping pair.
                    </div>
                }
                else
                {
                    <div class="alert alert-info" id="noMappingsMessage" style="display: none;">
                        No mappings added yet. Click "Add Mapping" to create a mapping pair.
                    </div>

                    @for (int i = 0; i < Model.mappings.Count; i++)
                    {
                        <div class="mapping-pair mb-4 border rounded p-3 position-relative">
                            <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 remove-mapping">
                                <i class="bi bi-x-lg"></i> Remove
                            </button>

                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="text-primary">SAP Field</h5>
                                    <div class="mb-2">
                                        <label class="form-label">Platform</label>
                                        <input type="text" class="form-control" name="mappings[@i].sap.platform" value="@Model.mappings[i].sap.platform" readonly />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Entity Name</label>
                                        <input type="text" class="form-control" name="mappings[@i].sap.entityName" value="@Model.mappings[i].sap.entityName" required />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Field Name</label>
                                        <input type="text" class="form-control" name="mappings[@i].sap.fieldName" value="@Model.mappings[i].sap.fieldName" required />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Description</label>
                                        <textarea class="form-control" name="mappings[@i].sap.description" rows="2">@Model.mappings[i].sap.description</textarea>
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Data Type</label>
                                        <input type="text" class="form-control" name="mappings[@i].sap.dataType" value="@Model.mappings[i].sap.dataType" />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Field Length</label>
                                        <input type="text" class="form-control" name="mappings[@i].sap.fieldLength" value="@Model.mappings[i].sap.fieldLength" />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Notes</label>
                                        <textarea class="form-control" name="mappings[@i].sap.notes" rows="2">@Model.mappings[i].sap.notes</textarea>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <h5 class="text-success">MIMOSA Field</h5>
                                    <div class="mb-2">
                                        <label class="form-label">Platform</label>
                                        <input type="text" class="form-control" name="mappings[@i].mimosa.platform" value="@Model.mappings[i].mimosa.platform" readonly />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Entity Name</label>
                                        <input type="text" class="form-control" name="mappings[@i].mimosa.entityName" value="@Model.mappings[i].mimosa.entityName" required />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Field Name</label>
                                        <input type="text" class="form-control" name="mappings[@i].mimosa.fieldName" value="@Model.mappings[i].mimosa.fieldName" required />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Description</label>
                                        <textarea class="form-control" name="mappings[@i].mimosa.description" rows="2">@Model.mappings[i].mimosa.description</textarea>
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Data Type</label>
                                        <input type="text" class="form-control" name="mappings[@i].mimosa.dataType" value="@Model.mappings[i].mimosa.dataType" />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Field Length</label>
                                        <input type="text" class="form-control" name="mappings[@i].mimosa.fieldLength" value="@Model.mappings[i].mimosa.fieldLength" />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Notes</label>
                                        <textarea class="form-control" name="mappings[@i].mimosa.notes" rows="2">@Model.mappings[i].mimosa.notes</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="d-flex justify-content-between mb-4">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>

<!-- Template for mapping pair -->
<template id="mappingPairTemplate">
    <div class="mapping-pair mb-4 border rounded p-3 position-relative">
        <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 remove-mapping">
            <i class="bi bi-x-lg"></i> Remove
        </button>

        <div class="row">
            <div class="col-md-6">
                <h5 class="text-primary">SAP Field</h5>
                <div class="mb-2">
                    <label class="form-label">Platform</label>
                    <input type="text" class="form-control" name="mappings[{index}].sap.platform" value="SAP" readonly />
                </div>
                <div class="mb-2">
                    <label class="form-label">Entity Name</label>
                    <input type="text" class="form-control" name="mappings[{index}].sap.entityName" required />
                </div>
                <div class="mb-2">
                    <label class="form-label">Field Name</label>
                    <input type="text" class="form-control" name="mappings[{index}].sap.fieldName" required />
                </div>
                <div class="mb-2">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="mappings[{index}].sap.description" rows="2"></textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label">Data Type</label>
                    <input type="text" class="form-control" name="mappings[{index}].sap.dataType" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Field Length</label>
                    <input type="text" class="form-control" name="mappings[{index}].sap.fieldLength" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Notes</label>
                    <textarea class="form-control" name="mappings[{index}].sap.notes" rows="2"></textarea>
                </div>
            </div>

            <div class="col-md-6">
                <h5 class="text-success">MIMOSA Field</h5>
                <div class="mb-2">
                    <label class="form-label">Platform</label>
                    <input type="text" class="form-control" name="mappings[{index}].mimosa.platform" value="MIMOSA" readonly />
                </div>
                <div class="mb-2">
                    <label class="form-label">Entity Name</label>
                    <input type="text" class="form-control" name="mappings[{index}].mimosa.entityName" required />
                </div>
                <div class="mb-2">
                    <label class="form-label">Field Name</label>
                    <input type="text" class="form-control" name="mappings[{index}].mimosa.fieldName" required />
                </div>
                <div class="mb-2">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="mappings[{index}].mimosa.description" rows="2"></textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label">Data Type</label>
                    <input type="text" class="form-control" name="mappings[{index}].mimosa.dataType" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Field Length</label>
                    <input type="text" class="form-control" name="mappings[{index}].mimosa.fieldLength" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Notes</label>
                    <textarea class="form-control" name="mappings[{index}].mimosa.notes" rows="2"></textarea>
                </div>
            </div>
        </div>
    </div>
</template>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let mappingIndex = @(Model.mappings?.Count ?? 0);
            const mappingsContainer = document.getElementById('mappingsContainer');
            const noMappingsMessage = document.getElementById('noMappingsMessage');
            const template = document.getElementById('mappingPairTemplate').innerHTML;

            // Add mapping button click handler
            document.getElementById('addMapping').addEventListener('click', function() {
                addMappingPair();
            });

            // Add event listeners to existing remove buttons
            document.querySelectorAll('.remove-mapping').forEach(button => {
                button.addEventListener('click', function() {
                    this.closest('.mapping-pair').remove();

                    // Show the "no mappings" message if there are no mappings
                    if (mappingsContainer.querySelectorAll('.mapping-pair').length === 0) {
                        noMappingsMessage.style.display = 'block';
                    }
                });
            });

            // Function to add a new mapping pair
            function addMappingPair() {
                // Hide the "no mappings" message
                noMappingsMessage.style.display = 'none';

                // Create a new mapping pair from template
                const newMapping = template.replace(/{index}/g, mappingIndex);

                // Create a container for the new mapping
                const mappingElement = document.createElement('div');
                mappingElement.innerHTML = newMapping;
                mappingElement.querySelector('.remove-mapping').addEventListener('click', function() {
                    mappingElement.remove();

                    // Show the "no mappings" message if there are no mappings
                    if (mappingsContainer.querySelectorAll('.mapping-pair').length === 0) {
                        noMappingsMessage.style.display = 'block';
                    }
                });

                // Add the new mapping to the container
                mappingsContainer.appendChild(mappingElement);

                // Increment the index for the next mapping
                mappingIndex++;
            }
        });
    </script>
}
                html += renderAccuracyMetrics(doc.accuracyResult, 'Overall Accuracy Metrics');

                // Mapping pairs
                if (doc.mappings && Array.isArray(doc.mappings)) {
                    html += `<div class="row">` +
                        doc.mappings.map((mapping, idx) => `

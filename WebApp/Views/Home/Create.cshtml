@model SAP_MIMOSAapp.Models.WorkOrderMapping

@{
    ViewData["Title"] = "Create Work Order Mapping";
}

<h2>Create New Work Order Mapping</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<form asp-action="Create" asp-controller="Home" method="post">  
    <input type="hidden" asp-for="Color" value="" />


    <div class="form-group mb-3">
        <label asp-for="SapField">SAP PM Field</label>
        <input asp-for="SapField" class="form-control" required />
        <span asp-validation-for="SapField" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DataType">Data Type</label>
        <input asp-for="DataType" class="form-control" required />
        <span asp-validation-for="DataType" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MimosaEquivalent">MIMOSA Equivalent</label>
        <input asp-for="MimosaEquivalent" class="form-control" required />
        <span asp-validation-for="MimosaEquivalent" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Cancel</a>
    </div>
</form>


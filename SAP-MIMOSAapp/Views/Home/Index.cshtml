@model dynamic

<h1>SAP PM to MIMOSA Work Order Entity Mapping</h1>

<p>This document provides a mapping between SAP Plant Maintenance (PM) work order fields and their corresponding MIMOSA CCOM work order entity fields.</p>

<div class="section">
    <h2>Field Mapping Table</h2>

    <div class="d-flex justify-content-between align-items-center">
        <button id="resetButton" class="btn btn-warning mt-3">Reset All Colors</button>
        <a href="@Url.Action("Create", "Home")" class="btn btn-primary mt-3">Create New Field</a>
    </div>

    <!-- OpenAI Search Form -->
    <form id="aiSearchForm" method="get" action="@Url.Action("Index", "Home")">
        <input type="text" name="query" placeholder="Enter your query..." value="@Model.searchRequest.Query" />
        <button type="submit">Search</button>
    </form>

    <!-- Display the AI response -->
    <div id="aiResponse">
        @if (ViewBag.AIResponse != null)
        {
            <pre>@ViewBag.AIResponse</pre>
        }
    </div>

    <!-- Work Order Table -->
    <table class="table">
        <thead>
            <tr>
                <th>SAP PM Field (AUFK Order master data)</th>
                <th>SAP Description</th>
                <th>SAP Data Type</th>
                <th>MIMOSA Equivalent</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.workOrders)
            {
                <tr>
                    <td id="sapField_@item.Id" style="background-color: @item.Color">
                        @item.SapField <hr />
                        <!-- Color change icons -->
                        <span class="d-flex justify-content-between">
                            <i class="fas fa-paint-brush change-color-icon green" data-id="@item.Id" style="cursor: pointer; font-size: 18px; color: green; margin-left: 10px;" title="Green"></i>
                            <i class="fas fa-paint-brush change-color-icon red" data-id="@item.Id" style="cursor: pointer; font-size: 18px; color: red; margin-left: 10px;" title="Red"></i>
                            <i class="fas fa-paint-brush change-color-icon yellow" data-id="@item.Id" style="cursor: pointer; font-size: 18px; color: yellow; margin-left: 10px;" title="Yellow"></i>
                            <i class="fas fa-paint-brush change-color-icon white" data-id="@item.Id" style="cursor: pointer; font-size: 18px; color: white; margin-left: 10px;" title="Reset Color"></i>
                        </span>
                    </td>
                    <td>@item.Description</td>
                    <td>@item.DataType</td>
                    <td>@item.MimosaEquivalent</td>
                    <td>@item.Notes</td>
                    <td class="d-flex justify-content-between">
                        <a href="@Url.Action("Edit", "Home", new { id = item.Id })" class="btn btn-primary me-2">Edit</a>
                        <form method="post" action="@Url.Action("Delete", "Home", new { id = item.Id })" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // Change color when an icon is clicked
        $(".change-color-icon").on("click", function () {
            var itemId = $(this).data("id");
            var newColor = $(this).css("color");

            // Update the background color on the row immediately
            $("#sapField_" + itemId).css("background-color", newColor);

            // Send the color change to the server via AJAX
            $.ajax({
                url: '@Url.Action("ChangeColor", "Home")',
                type: 'POST',
                data: {
                    id: itemId,
                    color: newColor
                },
                success: function () {
                    console.log("Color updated successfully!");
                },
                error: function () {
                    alert("Error saving color change.");
                }
            });
        });

        // Reset all colors when the reset button is clicked
        $("#resetButton").on("click", function () {
            // Send a reset request to the server
            $.ajax({
                url: '@Url.Action("ResetColors", "Home")',
                type: 'POST',
                success: function () {
                    // Reset all colors
                    $("td[id^='sapField_']").each(function () {
                        $(this).css("background-color", "");
                    });

                    alert("All colors have been reset.");
                },
                error: function () {
                    alert("Error resetting colors.");
                }
            });
        });
    </script>
}
